<Window x:Class="AdoNetLesson1.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoNetLesson1"
        mc:Ignorable="d"
        Title="AddBook" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <TextBox x:Name="BookName" Margin="20" Background="Bisque" Grid.Row="0">Enter Book Name</TextBox>
        <Button Grid.Row="1" Click="Button_Click">Submit</Button>
        <!--<TextBox x:Name="BookName" Margin="20" Background="Bisque" Grid.Row="1">Enter Author</TextBox>-->
    </Grid>
</Window>
